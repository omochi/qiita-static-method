{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strictNullChecks": true,
        "declaration": true,
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "target": "es5"
    },
    "include": [
        "./src/**/*"
    ]
}